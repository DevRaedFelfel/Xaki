<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Xaki | @ViewData["Title"]</title>
    <meta name="description" content="Xaki is a .NET Standard library for adding multi-language support to POCO classes. It includes a lightweight service for persisting and retrieving data to and from databases using any ORM. Xaki includes first-class support for ASP.NET Core, ASP.NET MVC, and all version of Entity Framework.">
    <link rel="manifest" href="/manifest.json">
    <link rel="shortcut icon" href="https://xaki.azureedge.net/assets/favicon-636762577492363000.ico">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.4.1/semantic.min.css" integrity="sha256-9mbkOfVho3ZPXfM7W8sV2SndrGDuh7wuyLjtsWeTI1Q=" crossorigin="anonymous" />
    <environment include="Development">
        <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="false" />
    </environment>
    <style>
        @@media (min-width: 1145px) {
            body.pushable {
                background-color: white !important;
                background-image: linear-gradient(to right, #1b1c1d, #1b1c1d 250px, white 250px, white) !important;
            }
        }
    </style>
</head>
<body id="admin">

    <div id="sidebar" class="ui vertical inverted sidebar menu">
        <partial name="_Layout_NavLinks" />
    </div>

    <div id="main-menu" class="ui fixed inverted main menu">
        <div class="ui container">
            <a class="launch icon item">
                <i class="content icon"></i>
            </a>
            <div class="item">
                Xaki
            </div>
        </div>
    </div>

    <div class="pusher">
        <div class="full height">
            <div class="toc">
                <nav class="ui vertical inverted sticky menu">
                    <partial name="_Layout_NavLinks" />
                </nav>
            </div>
            <div class="article">
                <header class="ui vertical segment">
                    <h1 class="ui large header">@ViewData["Title"]</h1>
                </header>
                <main class="main ui intro container">
                    @RenderBody()
                </main>
            </div>
        </div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.slim.min.js" integrity="sha256-3edrmyuQ0w65f8gfBsqowzjJe2iM6n0nKciPUp8y+7E=" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.4.1/semantic.min.js" integrity="sha256-t8GepnyPmw9t+foMh3mKNvcorqNHamSKtKRxxpUEgFI=" crossorigin="anonymous"></script>    

    <environment include="Development">
        <script src="~/js/site.js" asp-append-version="true"></script>
    </environment>
    <environment exclude="Development">
        <script src="~/js/site.min.js" asp-append-version="false"></script>
    </environment>

    @RenderSection("Scripts", required: false)

</body>
</html>
